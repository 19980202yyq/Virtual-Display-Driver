$deviceId = 'IddSampleDriver Device HDR' 
$device   = Get-PnpDevice -class Display -FriendlyName $deviceId -ErrorAction SilentlyContinue
if ($device) {
    switch ($device.Status) {
        'OK'    { Write-Host "Disabling device"; Disable-PnpDevice -class Display -FriendlyName $deviceId -Confirm:$false; break }
        default { Write-Host "Enabling device";  Enable-PnpDevice -class Display -FriendlyName $deviceId -Confirm:$false }
    }
}
else {
    Write-Warning "Device Called '$deviceId' not found"
}